          = image_tag "#{@product.images.first.image}", class:"buy_contents__width_buyArea--trade_item"

        .buy_contents__width_buyArea--item_name
          = @product.item_name
        .buyForm
          .buyArea 
            .buyArea__buyPrice 
              = "￥#{@product.price.to_s(:delimited)}"
