.mainbox
  = render partial:"registration_header_status_3"
  .registcontents
    = form_for @user, url: complete_path, method: :post, html: {class:"box"} do |f|
      .box__tittle
        %h3
          支払い方法
      = f.fields_for :card, @user.build_card || Card.new do |c|
        .formarea
          .formbox
            .formbox__text
              .formbox__text--tittle
                カード番号
              .formbox__text--btn
                必須
            = c.text_field :card_number, { class:"form", placeholder:'半角数字のみ', minlength: "16", maxlength: "16", required: true}
            .formbox__cardlogo
              =image_tag "card-logo/dinners_logo.png"
              =image_tag "card-logo/discovercard_logo.jpg"
              =image_tag "card-logo/jcb.jpeg"
              =image_tag "card-logo/sesoncard.png"
              =image_tag "card-logo/visa_logo.jpg"
            .formbox
              .formbox__text
                .formbox__text--tittle
                  有効期限
                .formbox__text--btn
                  必須
              %select.cardselect{name: "exp_month", type: "text", required: true}
                %option{value: ""} --
                %option{value: "1"}01
                %option{value: "2"}02
                %option{value: "3"}03
                %option{value: "4"}04
                %option{value: "5"}05
                %option{value: "6"}06
                %option{value: "7"}07
                %option{value: "8"}08
                %option{value: "9"}09
                %option{value: "10"}10
                %option{value: "11"}11
                %option{value: "12"}12
              %span 月
              %select.cardselect{name: "exp_year", type: "text", required: true}
                %option{value: ""} --
                %option{value: "2019"}19
                %option{value: "2020"}20
                %option{value: "2021"}21
                %option{value: "2022"}22
                %option{value: "2023"}23
                %option{value: "2024"}24
                %option{value: "2025"}25
                %option{value: "2026"}26
                %option{value: "2027"}27
                %option{value: "2028"}28
                %option{value: "2029"}29
              %span 年
            .formbox
              .formbox__text
                .formbox__text--tittle
                  セキュリティコード
                .formbox__text--btn
                  必須
              = c.text_field :security_code, { class: "form", placeholder: "カード背面4桁もしくは3桁の番号", maxlength: "4" , required: true}
              .link
                =link_to 'カード裏面の番号とは?','/'
          =f.submit "次へ進む", class:"submit" 
  =render partial:"registration_shortfooter"
.plusarea
