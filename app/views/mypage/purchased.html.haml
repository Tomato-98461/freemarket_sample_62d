.mypage-wrapper
  .mypage.clearfix
    = render 'nav'
    .mypage__content
      %section.mypage__container
        .mypage__container--head
          購入した商品
        %ul.container__select
          %li
            =link_to "/mypage/purchase", "data-toggle": "tab" do
              取引中
          %li.active
            =link_to "#mypage-tab-transaction-now", "data-toggle": "tab" do
              過去の取引
        .container__content
          %ul#mypage-tab-transaction-now.mypage-link--list.tab-pane.active
            %li
              =link_to "https://www.mercari.com/jp/transaction/order_status/m70068440240/", class:"mypage-link" do
                =image_tag "/assets/svg/logo_red.svg", class:"lazyload"
                .mypage-link__body
                  .mypage-link__body--text
                    「ノートパソコン」 を購入しました。
                    %span
                      取引が完了しました</span>
                  .mypage-link__body--status.bold.done
                    取引完了
                =fa_icon 'chevron-right'