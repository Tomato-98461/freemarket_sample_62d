.mypage-wrapper
  .mypage.clearfix
    = render '/mypage/nav'
    .mypage__content
      %section.mypage-payment
        .mypage-payment--head.head-center
          クレジットカード情報入力
        .payment-info
          .payment-info__card
            = form_tag('update', method: :post, action: "update", id: 'charge-form',  name: "inputForm", class:"formarea") do
              .formbox
                .formbox__text
                  .formbox__text--tittle
                    カード番号
                  .formbox__text--btn
                    必須
                = text_field_tag "card_number", "", class: "form", placeholder:'半角数字のみ',maxlength: "16", type: "text", id: "card_number"
                .formbox__cardlogo
                  =image_tag "card-logo/dinners_logo.png"
                  =image_tag "card-logo/discovercard_logo.jpg"
                  =image_tag "card-logo/jcb.jpeg"
                  =image_tag "card-logo/sesoncard.png"
                  =image_tag "card-logo/visa_logo.jpg"
                .formbox
                  .formbox__text
                    .formbox__text--tittle
                      有効期限
                    .formbox__text--btn
                      必須
                  %select.selectform{id: "exp_month", name:"exp_month"}
                    %option{value: ""} --
                    %option{value: "1"}01
                    %option{value: "2"}02
                    %option{value: "3"}03
                    %option{value: "4"}04
                    %option{value: "5"}05
                    %option{value: "6"}06
                    %option{value: "7"}07
                    %option{value: "8"}08
                    %option{value: "9"}09
                    %option{value: "10"}10
                    %option{value: "11"}11
                    %option{value: "12"}12
                  月
                  %select.selectform{id: "exp_year", name:"exp_year"}
                    %option{value: ""} --
                    %option{value: "2019"}19
                    %option{value: "2020"}20
                    %option{value: "2021"}21
                    %option{value: "2022"}22
                    %option{value: "2023"}23
                    %option{value: "2024"}24
                    %option{value: "2025"}25
                    %option{value: "2026"}26
                    %option{value: "2027"}27
                    %option{value: "2028"}28
                    %option{value: "2029"}29
                  年
                .formbox
                  .formbox__text
                    .formbox__text--tittle
                      セキュリティコード
                    .formbox__text--btn
                      必須
                  = text_field_tag "security_code", "", class:"form", placeholder:'カード背面4桁もしくは3桁の番号', maxlength: "4", id: "security_code"
                  .link
                    =link_to 'カード裏面の番号とは?','/'
                #card_token
                = submit_tag "追加する", id: "token_submit", class: "payment-info__card--add-btn red-btn"
